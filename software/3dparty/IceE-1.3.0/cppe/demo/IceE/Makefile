top_srcdir	= ../..

include $(top_srcdir)/config/Make.rules

SUBDIRS		= hello \
		  latency \
		  throughput \
		  callback \
		  chat \
		  bidir \
		  minimal \
		  nested \
		  value \
		  workqueue

ifeq ($(HAS_AMI),yes)
    SUBDIRS	+= async
endif

$(EVERYTHING)::
	@for subdir in $(SUBDIRS); \
	do \
	    echo "making $@ in $$subdir"; \
	    ( cd $$subdir && $(MAKE) $@ ) || exit 1; \
	done

top_srcdir	= ..\..\..

!include $(top_srcdir)\config\Make.rules.mak

!if "$(HAS_AMI)" == "yes"
SUBDIRS		= server client
!else
SUBDIRS		= server
!endif

$(EVERYTHING)::
	@for %i in ( $(SUBDIRS) ) do \
	    @echo "making $@ in %i" && \
	    cmd /c "cd %i && $(MAKE) -nologo -f Makefile.mak $@" || exit 1
